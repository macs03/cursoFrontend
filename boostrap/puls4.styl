gris_oscuro = #444

header
	background gris_oscuro
	color white
	padding 1em

	h1
		font-size 18px
		font-weight normal
		padding 0
		margin 0

	.logo figure
		border 1px dashed invert(gris_oscuro)
		height 52px
		width 52px

	.usuario
		.avatar
			border 1px dashed invert(gris_oscuro)
			border-radius 50%
			height 50px
			width 50px

section
	padding 1.2em

	article
		border 1px solid gris_oscuro
		border-radius 0 0 0.8em 0.8em
		overflow hidden
		margin-bottom 1.5em

		figure
			background gris_oscuro
			height 160px
			width 120px

		h2
			font-size 18px
			color gris_oscuro
		
		.acciones
			border-top 3px solid gris_oscuro
 			min-heigth 3em
 			padding 0.8em


		.fecha
			position relative
			right 20px

footer
		background gris_oscuro
		padding 2em
		color white




